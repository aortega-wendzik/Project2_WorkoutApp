<div class='container mx-auto py-8'>
  <form id='login-form' action='/login' method='POST'
    class='max-w-sm mx-auto bg-white p-6 rogit unded shadow-md text-center'>

    <h1 class='text-2xl text-center mb-6'>Workout With JANCS login</h1>
    <div class='mb-4'>
      <input
        id='username1'
        type='text'
        placeholder='Username'
        required
        class='w-full px-4 py-2 border border-gray-300 rounded'
        autocomplete="username"
      />
    </div>
    <div class='flex items-center justify-between mb-4'>
      <input
        id='password1'
        type='password'
        placeholder='Password'
        required
        class='w-full px-4 py-2 border border-gray-300 rounded'
        autocomplete="current-password"
      />
    </div>
    <script id='forgotPasswordTemplate' type='text/x-handlebars-template'>
      <div class="flex items-center justify-between mb-4"> <label class="flex
      items-center"> <input type="checkbox" class="mr-2" /> <span>Remember
      me</span> </label> <a href="#" class="text-blue-500">Forgot password</a>
      </div>
    </script>
    <button
     id="loginButton"
      type='submit'
      class='w-full bg-blue-500 text-white py-2 px-4 rounded'
    >Log In</button>
    <button
      type='reset'
      class='w-fnpm ull bg-gray-300 text-gray-700 py-2 px-4 mt-2 rounded'
    >Log Out</button>
  
  {{#if isLoggedIn}}
    <p class='mt-4'>Welcome, {{username}}!</p>
  {{else}}
    <p class='mt-4 text-center'>Please Log In or sign up</p>
    <a href='#' id='signupLink'>Sign Up</a>
    </form>
    <form id="signup-form" action="/api/users" method="POST">
      <div id='signupContainer' style='display: none;'>
        <div class='mb-4' class='signupContainer'>
          <div>
            <input
            id="first-name"
            name="first_name"
              type='text'
              placeholder='First Name'
              required
              class='w-full px-4 py-2 border border-gray-300 rounded'
              autocomplete='given-name'
            />
          </div>
          <div class='flex items-center justify-between mb-4'>
            <input
            id="last-name"
            name="last_name"
              type='text'
              placeholder='Last Name'
              required
              class='w-full px-4 py-2 border border-gray-300 rounded'
            />
          </div>
          <div class='flex items-center justify-between mb-4'>
            <input
            id="email"
            name="email"
              type='text'
              placeholder='Email'
              required
              class='w-full px-4 py-2 border border-gray-300 rounded'
              autocomplete='email'
            />
          </div>
          <div class='flex items-center justify-between mb-4'>
            <input
            id="phone-number"
            name="phone_number"
              type='text'
              placeholder='Phone number'
              required
              class='w-full px-4 py-2 border border-gray-300 rounded'
            />
          </div>
          <div class='flex items-center justify-between mb-4'>
            <input
            id="username"
            name="username"
              type='text'
              placeholder='Username'
            required
              class='w-full px-4 py-2 border border-gray-300 rounded'
              autocomplete='username'
            />
          </div>
          <div class='flex items-center justify-between mb-4'>
            <input
            id="password"
            name="password"
              type='password'
              placeholder='Password'
              required
              class='w-full px-4 py-2 border border-gray-300 rounded'
              autocomplete="current-password"
            />
          </div>
          <button
            type='save'
            class='w-full bg-blue-500 text-white py-2 px-4 rounded'
          >Save</button>
        </div>
      </div>
    </form>
  {{/if}}
</div>

<script src="./js/login.js"></script>
